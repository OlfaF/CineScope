{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <h1>Films</h1>
    <table>
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">title</th>
            <th scope="col">synospis</th>
            <th scope="col">release year</th>
        </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <th>{{film.title}}</th>
                <td>{{film.releaseYear}}</td>
                <a href="{{ path('film_show', {id: film.id}) }}">{{film.title}}</a>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}


