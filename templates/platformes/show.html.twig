{% extends 'base.html.twig' %}

{% block title %}{{platform.name}}{% endblock %}

{% block body %}
<h1>platform.name</h1>
<table>
    <thead>
        <tr>
            <th scope="col">name</th>
            <th scope="col">url</th>
            <th scope="col">logo</th>
            <th scope="col">films</th>
        </tr>
    </thead>
    <tbody>
        {% for platform in platforms %}
        <tr>
            <th>{{platform.name}}</th>
            <td>{{platform.url}}</td>
            <td>{{platform.logo}}</td>
            <td>
                <a href="{{path('app_platformes',{'id':platform.id})}}">Voir les films</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>

{% endblock %}
