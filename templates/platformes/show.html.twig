{% extends 'base.html.twig' %}

{% block title %}{{ platform.name }}{% endblock %}

{% block body %}
    <h1>Films dispo sur {{ platform.name }}</h1>
<div style="display: flex; gap: 2rem;">
    {% for film in films %}
        <div style="padding: 1rem; width: fit-content; border: 1px solid white; text-align: center">
            <h2>{{ film.title }}</h2>
            <p>{{ film.synopsis }}</p>
            <p>{{ film.releaseYear }}</p>
        </div>
    {% endfor %}
</div>

<div class="navigation">
    {{ knp_pagination_render(films) }}
</div>

{% endblock %}
